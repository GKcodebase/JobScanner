{
  "manifest_version": 3,
  "name": "Job Scanner Plugin",
  "version": "1.0",
  "permissions": [
    "activeTab",
    "storage",
    "identity",
    "scripting"
  ],
  "background": {
    "service_worker": "background.js",
    "type": "module"
  },
  "action": {
    "default_popup": "popup.html"
  },
  "web_accessible_resources": [
    {
      "resources": [
        "settings.html"
      ],
      "matches": [
        "<all_urls>"
      ]
    }] ,
  "content_scripts": [
    {
      "matches": [
        "<all_urls>"
      ],
      "js": [
        "content.js"
      ]
    },
     {
      "matches": [
        "<all_urls>"
      ],
      "js": [
        "lib/firebase.js"
      ]
    }
  ]
}